<!DOCTYPE html>
<html>
  <head>
    <% if params[:action] == "movie_detail" && @movie %>
      <title><%= @movie.meta_title %></title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
      <meta name="description" content="<%= @movie.meta_description %>" />
      <meta name="keywords" content="<%= @movie.meta_keywords %>" />
    <% else %>
      <title>Movie Store An Entertainment Category</title>
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
      <meta name="description" content="Visit WatchMoviesFree.info to Watch movies hd for free film, stream movies fast and easy and download full movies online cinema." />
  		<meta name="keywords" content="Watch Free Online Movie, Download HD Movie, Fast Movie Stream Online, Free HD Movies, Free Movie Online Watch" />
    <% end %>
		<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
		
		<!-- start plugins -->
		<link href='http://fonts.googleapis.com/css?family=Roboto+Condensed:100,200,300,400,500,600,700,800,900' rel='stylesheet' type='text/css'>
    <%= csrf_meta_tags %>

    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "/shared/fb_init" %>
  	<div class="container">
			<div class="container_wrap">
        <div class="header_top">
    		  <%= render "/shared/header" %>
        </div>
    		<%= yield %>
    	</div>
    </div>
    <%= render "/shared/footer" %>
    <%= render "/shared/google_analytics" %>
  </body>
</html>
